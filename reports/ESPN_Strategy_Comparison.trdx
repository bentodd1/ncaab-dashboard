                            <Style>
                              <BackgroundColor>DarkBlue</BackgroundColor>
                              <Color>White</Color>
                              <Font>
                                <Bold>True</Bold>
                              </Font>
                              <TextAlign>Center</TextAlign>
                              <VerticalAlign>Middle</VerticalAlign>
                            </Style>
                          </TextBox>
                        </ReportItem>
                      </TableCell>
                      <TableCell RowIndex="0" ColumnIndex="4">
                        <ReportItem>
                          <TextBox Name="header5">
                            <Value>Win %</Value>
                            <Style>
                              <BackgroundColor>DarkBlue</BackgroundColor>
                              <Color>White</Color>
                              <Font>
                                <Bold>True</Bold>
                              </Font>
                              <TextAlign>Center</TextAlign>
                              <VerticalAlign>Middle</VerticalAlign>
                            </Style>
                          </TextBox>
                        </ReportItem>
                      </TableCell>
                      <TableCell RowIndex="0" ColumnIndex="5">
                        <ReportItem>
                          <TextBox Name="header6">
